

<section>
  <div class="container">
    <div class="row mt-5">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
    </div>
    <table class="table mt-5" id="dataTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        {{!-- counter --}}
        <tr class="counter">
          <td class="counter"></td>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td>
            <div style="display: inline;float:inline-start">
              {{!-- PARAMS METHOD --}}
              <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                style="Text-align:right;float:inline-start"
                onclick="return confirm('Are you want to delete {{this.Name}}')">Delete</a>

              {{!-- QUERY METHOD
              <a href="/admin/delete-product?id={{this._id}}&name={{this.Name}}" class="btn btn-danger"
                style="Text-align:right;float:inline-start">Delete</a> --}}
            </div>
            <div style="float:inline-end" ;>
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary"
                style="Text-align:right; float:inline-end">Edit</a>

            </div>
          </td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>
<link rel="stylesheet" type="text/css" href="/dataTables/datatables.css">
 
<script type="text/javascript" charset="utf8" src="/dataTables/datatables.js"></script>

<script>
$(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>